    "husky": "^4.3.5",
    "jest": "24.9.0",
    "jest-junit": "12.0.0",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.0",
    "ts-jest": "24.1.0",
    "ts-loader": "^6.2.2",
    "ts-node": "8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.9.7"
